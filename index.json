{
  "$schema": "http://json.schemastore.org/prettierrc",
  "arrowParens": "always",
  "bracketSameLine": false,
  "bracketSpacing": true,
  "cursorOffset": -1,
  "embeddedLanguageFormatting": "auto",
  "endOfLine": "lf",
  "htmlWhitespaceSensitivity": "css",
  "insertPragma": false,
  "organizeImportsSkipDestructiveCodeActions": true,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "**/**/package.json",
      "options": {
        "jsonRecursiveSort": false
      }
    }
  ],
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-organize-imports", "prettier-plugin-sort-json"],
  "printWidth": 160,
  "proseWrap": "preserve",
  "requirePragma": false,
  "semi": true,
  "singleQuote": false,
  "tabWidth": 2,
  "tailwindAttributes": ["class", "className", "ngClass", ".*[cC]lassName"],
  "tailwindFunctions": ["clsx", "cn"],
  "trailingComma": "es5",
  "useTabs": false
}
